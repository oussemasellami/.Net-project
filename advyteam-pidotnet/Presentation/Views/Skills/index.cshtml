
@{
    ViewBag.Title = "index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}





<body align="center">
    <br />
    <br />
    <br />


    
    <div class="container">
        <div class="col-lg-12">

            <table class="table table-bordered" id="table_id">


                <thead class="thead-light">


                    <tr>

                        <th>NOM</th>
                        <th>Note</th>
                        <th>Description</th>
                        <th></th>
                    </tr>

                </thead>




                <tbody>
                    @foreach (var p in ViewBag.result)
                    {
                        <tr>
                            <td>@p.skillsname</td>
                            <td>@p.note</td>
                            <td>@p.descreption</td>
                            <td>
                                @Html.ActionLink("Delete", "Delete", new { id = p.id })
                            </td>

                        </tr>

                    }
                </tbody>

            </table>

        </div>
    </div>

    <script>
        $(document).ready(function () {
            $('#table_id').DataTable({

                "aLengthMenu": [[3, 5, 10, 25, -1], [3, 5, 10, 25, "All"]],
                "iDisplayLength": 5,

            });
        });
    </script>

    <div>
        <center> <a href="@Url.Action("Create","skills")">Ajouter competence</a> </center>
        <center> <a href="@Url.Action("index","home")">Statistique</a> </center>
    </div>  
   
</body>







