

@{

    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<body>
    <!-- Page Content -->
    <div class="container">
        <div class="row">
            <button class="btn btn-primary"><a href="@Url.Action("Create","Usert")"> Add </a> </button>
           
        </div>
        <div class="col-lg-12">
            <table class="table table-bordered" >
                <thead class="thead-light">
                    <tr>
                        <th>Id</th>
                        <th>FirstName</th>
                        <th>Lastname</th>
                        <th>Email</th>
                        <th>Password</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in ViewBag.result)
            {
                        <tr>
                            <td>@p.id</td>
                            <td>@p.firstname</td>
                            <td>@p.lastname</td>
                            <td>@p.email</td>
                            <td>@p.password</td>


                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

   


    <script>
        $(document).ready(function () {
            $('#table_id').DataTable({

                "aLengthMenu": [[3, 5, 10, 25, -1], [3, 5, 10, 25, "All"]],
                "iDisplayLength": 5,

            });
        });
    </script>


</body>


